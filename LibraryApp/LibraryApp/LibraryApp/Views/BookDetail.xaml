<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibraryApp.Views.BookDetail"
             Title="Livro">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label x:Name="lblTitulo" HorizontalTextAlignment="Center" FontSize="Large" Margin="20,20" />
                <Image x:Name="imgCapa" HeightRequest="100" WidthRequest="100" />
                <Label x:Name="lblAutor" HorizontalTextAlignment="Center" />
                <Label x:Name="lblDescricao" Margin="20,20" FontSize="Small" />
                <Label x:Name="lblDisponivel" HorizontalTextAlignment="Center" FontAttributes="Bold" />
                <Button x:Name="btnEmprestar" Text="Emprestar" Margin="20,20" Clicked="btnEmprestar_Clicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>